@model CreditCards.Core.Model.CreditCardApplication

@{
    ViewData["Title"] = "Application Complete";
}

<h1 class="h2">Application Complete</h1>
<div class="row">
    <div class="col-md-6">
        <div class="card bg-primary">
            <div class="card-header text-white">
                Application Details
            </div>
            <div class="card">
                <div class="card-header">
                    <p>Application Reference Number</p>
                </div>
                <div class="card-body">
                    @Model.Id
                </div>

                <div class="card-header">
                    <p>Name</p>
                </div>
                <div class="card-body">
                    @Model.FirstName  @Model.LastName
                </div>

                <div class="card-header">
                    <p>Age</p>
                </div>
                <div class="card-body">
                    @Model.Age
                </div>

                <div class="card-header">
                    <p>Gross Annual Income</p>
                </div>
                <div class="card-body">
                    @Model.GrossAnnualIncome
                </div>
            </div>
        </div>
    </div>
</div>

