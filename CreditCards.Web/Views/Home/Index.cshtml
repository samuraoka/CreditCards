@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="carousel-item active">
            <img src="~/images/banner1.svg" alt="slide1" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    New low rate
                    <a class="btn btn-light" asp-area="" asp-controller="Apply" asp-action="Index">Apply Now!</a>
                </p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/banner2.svg" alt="slide2" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Easy application process
                    <a class="btn btn-light" asp-area="" asp-controller="Apply" asp-action="Index">Apply Now!</a>
                </p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/banner3.svg" alt="slide3" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Award winning customer service
                    <a class="btn btn-light" asp-area="" asp-controller="Apply" asp-action="Index">Apply Now!</a>
                </p>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
